@using BachatCommittee.Models.DTOs.Responses
@{
    ViewData["Title"] = "Users in Role";
    Layout = "_MainLayout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Users in Role: @ViewBag.RoleName</h3>
        <div class="card-toolbar">
            <a href="@Url.Action("Index", "Roles")" class="btn btn-sm btn-light">
                <i class="ki-outline ki-arrow-left fs-2"></i>
                Back to Roles
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <table class="table table-striped table-row-bordered gy-5 gs-7" id="usersInRoleTable">
            <thead>
                <tr class="fw-bold fs-6 text-gray-800">
                    <th>Username</th>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Users != null)
                {
                    @foreach (UserResponseDto user in (List<UserResponseDto>)ViewBag.Users)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.FullName</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersInRoleTable').DataTable({
                responsive: true,
                order: [[0, 'asc']]
            });
        });
    </script>
}
