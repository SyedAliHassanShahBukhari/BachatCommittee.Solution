@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<div class="d-flex flex-center flex-column flex-column-fluid">
    <div class="w-lg-500px p-10 p-lg-15 mx-auto text-center">
        <h1 class="text-dark fw-bolder mb-3">Access Denied</h1>
        <div class="text-gray-500 fw-semibold fs-6 mb-10">
            You do not have permission to access this resource.
        </div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-primary">
            Go to Home
        </a>
        <a href="@Url.Action("Login", "Auth")" class="btn btn-lg btn-light-primary">
            Sign In as Different User
        </a>
    </div>
</div>
