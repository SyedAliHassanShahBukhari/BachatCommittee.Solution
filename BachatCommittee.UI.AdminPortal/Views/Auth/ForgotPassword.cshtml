@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="d-flex flex-center flex-column flex-column-fluid">
    <div class="w-lg-500px p-10 p-lg-15 mx-auto">
        <form class="form w-100" asp-action="ForgotPassword" asp-controller="Auth" method="post" id="kt_password_reset_form">
            @Html.AntiForgeryToken()

            <div class="text-center mb-10">
                <h1 class="text-dark fw-bolder mb-3">Forgot Password?</h1>
                <div class="text-gray-500 fw-semibold fs-6">
                    Enter your email to reset your password
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-10 bg-light-danger border border-danger border-dashed rounded p-5">
                    <div class="text-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                </div>
            }

            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="mb-10 bg-light-success border border-success border-dashed rounded p-5">
                    <div class="text-success">@ViewData["SuccessMessage"]</div>
                </div>
            }

            <div class="fv-row mb-10">
                <label class="form-label fw-bolder text-dark fs-6">Email</label>
                <input class="form-control form-control-lg form-control-solid" type="email" name="email" placeholder="Enter your email" autocomplete="off" required />
            </div>

            <div class="d-flex flex-center flex-wrap gap-5">
                <button type="submit" id="kt_password_reset_submit" class="btn btn-lg btn-primary fw-bolder me-4">
                    <span class="indicator-label">Submit</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-lg btn-light-primary fw-bolder">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var form = document.getElementById("kt_password_reset_form");
        var submitButton = document.getElementById("kt_password_reset_submit");

        form.addEventListener("submit", function (e) {
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            } else {
                submitButton.setAttribute("data-kt-indicator", "on");
                submitButton.disabled = true;
            }
            form.classList.add("was-validated");
        });
    </script>
}
